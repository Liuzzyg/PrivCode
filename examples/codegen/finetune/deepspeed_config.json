{
    "train_batch_size": 2,
    "gradient_accumulation_steps": 1,
    "steps_per_print": 100,
    "zero_optimization": {
      "stage": 2,
      "offload_param": {
        "device": "cpu",
        "pin_memory": true
      },
      "offload_optimizer": {
        "device": "cpu",
        "pin_memory": true
      }
    },
    "optimizer": {
      "type": "AdamW",
      "params": {
        "lr": 5e-6,
        "betas": [
          0.9,
          0.999
        ],
        "eps": 1e-8
      }
    },
    "scheduler": {
      "type": "CosineAnnealingLR",
      "params": {
        "T_max": 100,
        "eta_min": 1e-6
      }
    },
    "fp16": {
      "enabled": false
    },
    "bf16": {
      "enabled": true
    },
    "activation_checkpointing": {
      "partition_activations": true,
      "num_checkpoints": 1
    },
    "wall_clock_breakdown": false
  }
  